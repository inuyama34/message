<h1>メッセージ一覧</h1>

<% if @posts.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>title</th>
        <th>post</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.id, post %></td>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @posts %>
  </div>
<% end %>

<%= link_to '新規メッセージの投稿', new_post_path, class: "btn btn-primary" %>